@using System.ComponentModel.DataAnnotations
@using DietPenguin.WebApi.Contracts

@if (Needs != null)
{
        <Grid Overflow="Overflow.Scroll" Style="max-height: 25vh">
                @foreach (var n in Needs)
                {
                    <Column ColumnSize="ColumnSize.Is6.OnMobile.Is4.OnDesktop">
                        <NutritionalGoal NutritionalNeed="n"/>
                    </Column>
                }
        </Grid>
}
else
{
    <Loading />
}

@code {
    [Required]
    [Parameter]
    public IEnumerable<NutritionalNeedDto>? Needs { get; set; }
}